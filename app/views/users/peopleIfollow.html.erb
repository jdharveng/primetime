<%#=@user.all_following %>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4 small-padding background-color full-height">
      <div class="user-profile-box overflow-scroll">
        <div class="user-name-followers">
          <p><%= @user.first_name+" is following" %></p>
        </div>
        <div class="red-line-box full-width">
          <div class="red-line"></div>
        </div>
        <% if @user.all_following.count == 0 %>
          <div class="no-followers-info">
            <p>Not following anyone</p>
            <%="Be the first to follow "+@user.first_name %>
          </div>
        <% else %>
          <% @user.all_following.each do |following| %>
        <div class="avatar-container ">
          <%= cl_image_tag(following.picture, class:"avatar-large") %>
        </div>
        <div class="profiles-container">
          <%= following.first_name%>
        </div>
        <div class="profiles-container">
          <%= following.bio%>
        </div>
        <div class="profiles-container">
          <p class="owned-activities">Owner of the activities:</p>
          <ul>
            <% following.activities.each do |activity| %>
            <li><%= activity.title %></li>
            <% end %>
          </ul>
        </div>
        <hr>
        <% end %>
        <% end %>
      </div>

      <div class="col-xs-4 buttons-container">
        <button class="back-button passive-button half-width" onclick="goBack()"><i class="fas fa-caret-left"></i>GO BACK</button>
        <button class="next-button cta-button half-width"><%= link_to "Follow", new_follow_path(@user.id)%> <i class="fas fa-user-plus"></i></button>
      </div>
    </div>
  </div>
</div>


<script>

  function goBack() {
    window.history.back();
  }

  function goForward() {
    window.history.forward()
  }
</script>
