<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4 small-padding background-colo full-height">
      <div class="banner-show" style="background-image: url('<%=cl_image_path @activity.picture%>')">
      </div>
      <div class="booking-info">
        <div class="booking-activity-name">
          <%= @activity.title %>
        </div>
        <div class="booking-activity">
          <p>Payment Status</p>
        <div class="red-line-box full-width">
            <div class="red-line"></div>
        </div>
          <div class="booking-info-card">
              <%= @booking.state.capitalize %>
          </div>
        </div>
        <div class="booking-activity">
          <p>Booking Status</p>
        <div class="red-line-box full-width">
            <div class="red-line"></div>
        </div>
          <div class="booking-info-card">
              <%= humanized_money_with_symbol(@booking.amount) %>
          </div>
        </div>
        <div class="booking-activity-payment">
          <%= @booking.payment %>
        </div>
      </div>
       <div class="col-xs-4 buttons-container">
        <button class="back-button passive-button half-width" onclick="goBack()"><i class="fas fa-caret-left"></i>Back</button>
        <% if @activity.payable %>
            <%= form_tag new_booking_payment_path(@booking), html: { style: "height: 60px; margin: 0px; display: flex; justify-content: center; padding: 0px;"}, class:"half-width", method: :get do %>
                <%= submit_tag 'Purchase', class: 'next-button cta-button full-width' %>
            <% end %>
        <% else %>
            <%= link_to 'Done', activity_path(@activity), class: 'next-button cta-button half-width'%>
        <% end %>
    </div>
  </div>
</div>
