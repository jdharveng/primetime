<div class="card-box">
  <%= link_to activity_path(activity) do %>
    <div class="card-link"></div>
  <% end %>
  <div class="card-picture" style="background-image: url('<%=cl_image_path activity.picture%>')">
  </div>
  <div class="card-content">
    <div class="card-top">
      <div class="card-title">
        <%= h truncate(activity.title, :length => 45) %>
      </div>
      <div class="card-category">
        <%= activity.category.name %>
      </div>
    </div>
    <div class="card-bottom">
      <div class="card-distance">
        Bookings: <%= activity.bookings.count %>
      </div>
      <div class="card-details">
        <div class="rating">
          <% if activity.reviews_average.round(1) == 0 %>
              <%= "N/A" %>
          <% else %>
              <%= activity.reviews_average.round(1) %>
          <% end %>
        </div>
        <div class="price">
          <%= humanized_money_with_symbol(activity.price) %>
        </div>
        <div class="time">
          <i class="fas fa-clock"></i>
          <%=activity.duration%>m
        </div>
      </div>
    </div>
  </div>
</div>
