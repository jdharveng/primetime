    <div id="activity-map" class="map-start">
          <div id="map" data-markers="<%= @marker.to_json %>"></div>
    </div>
    <div class ="close-box">
      <div id="map-close" class="box-icon map-icon close-button map-start">
        <i class="fas fa-times icon-white fa-lg"></i>
