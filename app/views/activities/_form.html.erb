<%= simple_form_for @activity do |f| %>
 <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :category_id, collection: Category.all, as: :select  %>
    <%= f.input :duration %>
    <%= f.input :price %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
