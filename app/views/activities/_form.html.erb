<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4 small-padding background-color full-height">
      <div class="full-container container-middle overflow-scroll">
            <div class="filter-title">
              Add a new Activity
            </div>
              <%= simple_form_for @activity do |f| %>
               <div class="form-inputs">
                  <%= f.input :title, label: false, placeholder:"title"%>
                  <%= f.input :description, label: false, placeholder:"description" %>
                  <%= f.input :category_id, collection: Category.all, as: :select, label: false, include_blank: "-- Select category --" %>
                  <%= f.input :duration, label: false, placeholder:"duration in minutes" %>
                  <%= f.input :address, id:"activity_address", label: false, placeholder:"address" %>
                  <%= f.input :price, label: false, as: :currency, currency: "â‚¬" %>
                  <%= f.input :payable, label: "able to pay online?" %>
                  <%= f.input :picture %>
                  <%= f.input :picture_cache, as: :hidden %>
                </div>
      </div>
      <div class="col-xs-4 buttons-container">
        <button class="back-button passive-button" onclick="goBack()"><i class="fas fa-caret-left"></i>Back</button>
        <div id="next-filter" class="next-button cta-button"><%= f.button :submit, "Create!" ,class: "next-button cta-button"%></div>
      </div>
              <% end %>
    </div>
  </div>
</div>

<script>
function goBack() {
    window.history.back();
}

function goForward() {
    window.history.forward()
}
</script>
