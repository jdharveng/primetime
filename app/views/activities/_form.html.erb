<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="primetime-logo">
        <%= image_tag "logo.png", height:100 %>
      </div>
      <div class="form-box">
            <h1>Add an Activity</h1>
              <%= simple_form_for @activity do |f| %>
               <div class="form-inputs">
                  <%= f.input :title %>
                  <%= f.input :description %>
                  <%= f.input :category_id, collection: Category.all, as: :select  %>
                  <%= f.input :duration %>
                  <%= f.input :address, id:"activity_address" %>
                  <%= f.input :price %>
                  <%= f.input :payable %>
                  <%= f.input :picture %>
                  <%= f.input :picture_cache, as: :hidden %>
                </div>
                <div class="form-actions">
                  <%= f.button :submit %>
                </div>
              <% end %>
              <div class="extra-links">
              <%#= render "devise/shared/links"%>
            </div>
      </div>
    </div>
  </div>
</div>

