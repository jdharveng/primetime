<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4 small-padding background-color">
      <div class="full-container container-middle">
            <div class="filter-title">
              Edit your profile
            </div>

            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= f.error_notification %>

              <div class="form-inputs">
                <%= f.input :first_name, label:false, placeholder:"first name" %>
                <%= f.input :last_name, label:false, placeholder:"last name" %>
                <%= f.input :email, required: true, autofocus: true, label:false,placeholder:"email" %>

                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
                <% end %>

                <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, label: false,placeholder:"password" %>
                <%= f.input :password_confirmation, required: false, label: false, placeholder: "confirm your password" %>
                <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true, label: false, placeholder: "current password" %>
                <%= f.input :bio, label: false, placeholder:"your bio"%>
                <%= f.input :picture %>
                <%= f.input :picture_cache, as: :hidden %>
              </div>
      </div>
      <div class="col-xs-4 buttons-container">
          <button class="back-button passive-button half-width" onclick="goBack()"><i class="fas fa-caret-left"></i>Back</button>
          <div id="next-filter" class="next-button cta-button half-width"><%= f.button :submit, "Create!" ,class: "next-button cta-button"%></div>
      </div>
          <% end %>
  </div>
</div>
</div>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
