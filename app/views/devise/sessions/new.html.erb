<div class="container" style="display:block">
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4 small-padding background-color full-height">
       <div class="full-container container-middle slider-middle-page">
          <div class="filter-title">
              Log in to Primetime
          </div>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email, label: false, placeholder:"email",required: false, autofocus: true %>
              <%= f.input :password, required: false, label:false, placeholder: "password" %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
        <div class="extra-links">
            <%= render "devise/shared/links" %>
        </div>

        </div>
        <div class="col-xs-4 buttons-container">
            <!-- <button class="back-button cta-button"><i class="fas fa-caret-left"></i>Back</button> -->
            <div id="next-filter" class="next-button cta-button full-button"><%= f.button :submit, "Log in" ,class: "next-button cta-button"%></div>
        </div>
          <% end %>

       </div>

    </div>
  </div>
</div>
